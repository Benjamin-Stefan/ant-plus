{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "lib": ["ES6", "dom"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build"]
}
