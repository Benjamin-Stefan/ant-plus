{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        //"declaration": true,
        //"declarationDir": "./dist/types",
        "sourceMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build"]
}
